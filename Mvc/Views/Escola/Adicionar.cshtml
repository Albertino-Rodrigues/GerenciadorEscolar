@model Biblioteca.Models.EscolaModel;
@{
    ViewData["Title"] = "Adicionar Escola";
}

@section scripts{

<script>
    function Decimais(obj, e) {
        var tecla = (window.event) ? e.keyCode : e.which;
        if (tecla == 8 || tecla == 0)
            return true;
        if (tecla < 48 || tecla > 57)
            return false;
    }
</script>

}

<div class="text-center">

    <h1 class="display-4">Adicionar uma Escola</h1>

</div>

<form asp-controller="Escola" asp-action="Adicionar" method="post">

    <div class="form-group">
        <label for="nome"> Nome </label>
        <input type="text" asp-for="Nome" maxlength="50" required="required" class="form-control" placeholder="Digite o Nome">
    </div>
    

    <div class="form-group">
        <label for="inep"> Código INEP </label>
        <input type="text" asp-for="Inep" required="required" maxlength="8" class="form-control" placeholder="Digite o código INEP" onkeypress="return Decimais( this , event ) ;">
    </div>


    <div class="form-group">
        <label for="contato"> Contato </label>
        <input type="text" asp-for="Contato" required="required" maxlength="15" class="form-control" placeholder="Digite o Contato">
    </div>


    <button type="submit" class="btn btn-primary"> Salvar </button>
    <a class="btn btn-secondary" asp-controller="Escola" asp-action="Index" role="button">Voltar</a>

</form>

   


    