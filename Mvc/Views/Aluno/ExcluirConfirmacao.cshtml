@model Biblioteca.Models.AlunoModel;
@{
	ViewData["Title"] = "Confirmação apagar o cadastro do Aluno";
}

<div class="text-center">

	<input type="hidden" asp-for="TurmaId"  name="TurmaId" value="@ViewBag.TurmaId" />

	<h3>Deseja excluir o cadastro do aluno (@Model.Nome)?</h3>

</div>

<br/>

<form asp-controller="Aluno" asp-action="Excluir" method="delete">
	<input type="hidden" asp-for="TurmaId" name="TurmaId" value="@ViewBag.TurmaId" />

	<a class="btn btn-danger btn-block" role="button" asp-controller="Aluno" asp-action="Excluir" asp-route-id="@Model.Id" asp-route-turmaId="@ViewBag.TurmaId"> Confirmar </a>
	<a class="btn btn-secondary btn-block" role="button" asp-controller="Aluno" asp-action="Index"> Cancelar </a>

</form>
